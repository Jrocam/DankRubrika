<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jrocam.uninorte.dankrubrica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RubricaActivity"
            android:label="@string/title_activity_rubrica"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AsignaturaActivity"
            android:label="@string/title_activity_asignatura"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectAsignaturaActivity"
            android:label="@string/title_activity_select_asignatura"
            android:parentActivityName=".AsignaturaActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jrocam.uninorte.dankrubrica.AsignaturaActivity" />
        </activity>
        <activity
            android:name=".SelectRubricaActivity"
            android:label="@string/title_activity_select_rubrica"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectCategoriasActivity"
            android:label="@string/title_activity_select_categorias"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>